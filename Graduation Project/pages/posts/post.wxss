swiper{
  width:100%;
  height:500rpx;
}
/*less sass的css预编译器，生成预编译文件的扩展名一定要是wxss*/
swiper image{
  width:100%;
  height:100%;
}
.post-container{
  display: flex;
  flex-direction: column;
  margin-top: 22rpx;
  margin-bottom: 40rpx;
  background-color: #fff;
  border-bottom: 1px solid #ededed;
  border-top: 1px solid #ededed;
  padding-bottom: 5px;
}
.post-author-date{
  margin: 10rpx 0 22rpx 10rpx;
}
.post-author{
  width: 60rpx;
  height: 60rpx;
  vertical-align: middle;
}
.post-date{
  margin-left: 20rpx;
  vertical-align: middle;/*设置垂直居中*/
  margin-bottom: 5px;
  font-size: 26rpx;
}
.post-title{
  font-size: 34rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 10px;
  margin-left: 10px;/*如果这里使用rpx，使用不同设备的时候垂直距离会不可控
                      水平用rpx，垂直用px*/
}
.post-image{
  margin-left: 16px;
  width: 100%;
  height: 340rpx;
  margin: auto 0;
  margin-bottom: 15px;
}
.post-content{
  color: #666;
  font-size: 28rpx;
  margin-bottom: 20rpx;
  margin-left: 20rpx;
  letter-spacing: 2rpx;/*文本间距*/
  line-height: 40rpx;/*文字行高*/
}
.post-like{
  font-size: 13px;
  flex-direction: row;/*指定行方向*/
  line-height: 16px;
  margin-left: 10px;
}
.post-like-image{
  height: 16px;
  width: 16px;
  margin-right: 8px;
  vertical-align: middle;
}
.post-like-font{
  vertical-align: middle;
  margin-right: 20px;
}